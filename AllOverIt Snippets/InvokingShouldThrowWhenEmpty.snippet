<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.0.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>Invoking Should Throw ArgumentException When Empty</Title>
      <Author>Malcolm Smith</Author>
      <Description>Creates a Test Invoking() statement expecting to throw an ArgumentException</Description>
      <HelpUrl></HelpUrl>
      <Shortcut>testinvempty</Shortcut>
    </Header>
    <Snippet>
      <Code Language="CSharp" Delimiter="$" Kind="method body"><![CDATA[
	    Invoking(() =>
        {
        })
        .Should()
        .Throw<ArgumentException>()
        .WithNamedMessageWhenEmpty("$PropName$");]]>
      </Code>
	  <Declarations>
	    <Literal>
		  <ID>PropName</ID>
		  <Default>name</Default>
		  <Tooltip>The argument name that had an empty value.</Tooltip>
		</Literal>
	  </Declarations>
      <Imports>
        <Import>
          <Namespace>System</Namespace>
        </Import>
        <Import>
          <Namespace>AllOverIt.Fixture</Namespace>
        </Import>
        <Import>
          <Namespace>AllOverIt.Fixture.Extensions</Namespace>
        </Import>
        <Import>
          <Namespace>FluentAssertions</Namespace>
        </Import>
      </Imports>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>