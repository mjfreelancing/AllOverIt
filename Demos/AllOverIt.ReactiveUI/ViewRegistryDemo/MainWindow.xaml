<Window
    x:Class="ViewRegistryDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Main Window"
    Width="200"
    Height="250"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Width="100" Click="View1Click"
            Height="40">
            View 1
        </Button>

        <Button
            Grid.Row="1" Click="View2Click"
            Width="100"
            Height="40">
            View 2
        </Button>

        <Button
            Grid.Row="2" Click="View3Click"
            Width="100"
            Height="40">
            View 3
        </Button>
    </Grid>
</Window>
