<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netcoreapp3.1;netstandard2.0;netstandard2.1;net5.0;net6.0</TargetFrameworks>
        <LangVersion>Latest</LangVersion>
        <Version>5.9.1</Version>
        <Authors>Malcolm Smith</Authors>
        <Company></Company>
        <Copyright>Copyright Â© 2022</Copyright>
        <Description>Provides utility extensions for use with ReactiveUI.</Description>
        <PackageTags>utilities</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryType>git</RepositoryType>
        <RepositoryUrl>https://github.com/mjfreelancing/AllOverIt</RepositoryUrl>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <GenerateDocumentationFile>True</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup Condition="'$(TargetFramework)' != 'net6.0' ">
        <PackageReference Include="ReactiveUI" Version="16.4.15" />
        <PackageReference Include="ReactiveUI.Fody" Version="16.4.15" />
    </ItemGroup>

    <ItemGroup Condition="'$(TargetFramework)' == 'net6.0' ">
        <PackageReference Include="ReactiveUI" Version="18.2.5" />
        <PackageReference Include="ReactiveUI.Fody" Version="18.2.5" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\AllOverIt\AllOverIt.csproj" />
    </ItemGroup>

</Project>

